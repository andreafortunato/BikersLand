<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="pnlMain" prefHeight="900.0" prefWidth="1200.0" style="-fx-background-color: #202020;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <fx:include fx:id="header" source="Header.fxml" />
   </top>
   <center>
      <StackPane minWidth="1200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="imgBackground" fitHeight="150.0" fitWidth="200.0">
               <effect>
                  <ColorAdjust brightness="-0.7" />
               </effect>
            </ImageView>
            <BorderPane maxHeight="900.0" maxWidth="1200.0" StackPane.alignment="TOP_CENTER">
               <top>
                  <Label fx:id="lblTitle" text="Title" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="72.0" />
                     </font>
                  </Label>
               </top>
               <padding>
                  <Insets top="20.0" />
               </padding>
               <center>
                  <GridPane hgap="15.0" maxHeight="-Infinity" maxWidth="-Infinity" styleClass="event-details" vgap="10.0" BorderPane.alignment="TOP_CENTER">
                    <columnConstraints>
                      <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="500.0" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label fx:id="lblDepartureDate" text="DepartureDate" GridPane.columnIndex="1" />
                        <Label fx:id="lblReturnDate" text="ReturnDate" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="lblDepartureCity" text="DepartureCity" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label fx:id="lblDestinationCity" text="DestinationCity" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label fx:id="lblPartecipants" text="Partecipants" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label fx:id="lblOwnerUsername" text="Owner_Username" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                        <Label text="Departure date:" />
                        <Label text="Return date:" GridPane.rowIndex="1" />
                        <Label text="From:" GridPane.rowIndex="2" />
                        <Label text="To:" GridPane.rowIndex="3" />
                        <Label text="Number of partecipants:" GridPane.rowIndex="4" />
                        <Label text="Description:" GridPane.rowIndex="5" />
                        <Label text="Tags:" GridPane.rowIndex="6" />
                        <Label text="Created by:" GridPane.rowIndex="7" />
                        <Label fx:id="lblDescription" text="Description" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <ListView maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                     </children>
                     <BorderPane.margin>
                        <Insets top="50.0" />
                     </BorderPane.margin>
                  </GridPane>
               </center>
            </BorderPane>
         </children>
      </StackPane>
   </center>
</BorderPane>
