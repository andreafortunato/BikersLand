<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="150.0" prefWidth="800.0" styleClass="header" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bikersland.HeaderController">
   <children>
      <HBox layoutX="410.0" layoutY="55.0" spacing="10.0" AnchorPane.rightAnchor="40.0">
         <children>
            <ImageView fx:id="btnLanguage" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" styleClass="flag">
               <image>
                  <Image url="@img/italy.png" />
               </image>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </ImageView>
            <Button fx:id="btnRegister" mnemonicParsing="false" onAction="#register" prefHeight="40.0" prefWidth="140.0" text="ISCRIVITI" />
            <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#btnClick" prefHeight="40.0" prefWidth="140.0" text="ACCEDI" />
         </children>
      </HBox>
      <ImageView fx:id="imgLogo" fitHeight="113.0" fitWidth="150.0" layoutX="40.0" layoutY="19.0" onMouseClicked="#goToHomepage" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@img/Logo%20White.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
