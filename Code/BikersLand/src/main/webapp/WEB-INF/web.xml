<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>BikersLand</display-name>
    <filter>
			<filter-name>DenyFilter</filter-name>
			<filter-class>com.bikersland.utility.DenyFilter</filter-class>
		</filter>
		<filter-mapping>
			<filter-name>DenyFilter</filter-name>
			<url-pattern>/header.jsp</url-pattern>
		</filter-mapping>
		<filter-mapping>
      <filter-name>DenyFilter</filter-name>
      <url-pattern>/loginOk.jsp</url-pattern>
    </filter-mapping>
    
    <error-page>  
		  <exception-type>java.lang.NullPointerException</exception-type>  
		  <location>/error.jsp</location>  
	  </error-page>
</web-app>
